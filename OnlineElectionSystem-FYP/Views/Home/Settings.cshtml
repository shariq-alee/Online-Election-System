                                        @* @Html.TextAreaFor(f => f.PermanentAreaAddress, new { required = "required", @class = "form-control", @minlength = "2", @maxlength = "50" })<br />*@
                                        @Html.ValidationMessageFor(f => f.PermanentAreaAddress)
                                    </div>
                                </div>
                            
                            <input type="submit" value="Save" class="btn btn-success" />
