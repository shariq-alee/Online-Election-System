                        <div class="tab-pane fade show active" id="list-home" role="tabpanel" aria-labelledby="list-home-list">
                            <form action="EditProfileSettings" method="post">
                                <div class="row">
                                    <div class="col-sm-6">
                                        <b>Name</b><br />
                                        <input class="form-control" name="Name" style="width:250px" type="text" value="@ViewBag.User.Name" /><br />
                                        @Html.ValidationMessageFor(f => f.Name)
                                    </div>
                                    <div class="col-sm-6">
                                        <b>CNIC</b><br />
                                        <input class="form-control" name="CNIC" style="width:250px" type="text" value="@ViewBag.User.CNIC" /><br />
                                        @Html.ValidationMessageFor(f => f.CNIC)
                                    </div>
                                </div>
                                
                                <b>Password</b><br />
                                <input class="form-control" name="Password" style="width:250px" type="password" value="@ViewBag.User.Password" /><br />
                                @Html.ValidationMessageFor(f => f.Password)
                                <b>Date Of Birth</b><br />
                                <input class="form-control" name="DateOfBirth" style="width:250px" type="date" value="@ViewBag.User.DateOfBirth" /><br />
                                @Html.ValidationMessageFor(f => f.DateOfBirth)
                                <div class="row">
                                    <div class="col-sm-6">
                                        <b>Current Address</b><br />
                                        <textarea class="form-control" name="CurrentAddress" style="width:250px">@ViewBag.User.CurrentAddress</textarea><br />
                                    </div>
                                    <div class="col-sm-6">
                                        <b>@Html.Label("Current Address Area")</b><br />
                                        <select name="CurrentAreaAddress" class="form-control">
                                            <option selected>--Select--</option>
                                            @foreach (var item1 in (IEnumerable<OnlineElectionSystem_FYP.Models.Constituency_Locations>)ViewBag.ConstituencyLocs)
                                            {
                                                if (ViewBag.User.CurrentAreaAddress.Equals(item1.Id.ToString()))
                                                {
                                                    <option value="@item1.Id" selected>@item1.Address</option>
                                                }
                                                else
                                                {
                                                    <option value="@item1.Id">@item1.Address</option>    
                                                }
                                                
                                            }
                                        </select>
                                        @Html.ValidationMessageFor(f => f.CurrentAreaAddress)
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-6">
                                        <b>@Html.Label("Permanent Street Address")</b><br />
                                       <textarea class="form-control" name="PermanentAddress" style="width:250px">@ViewBag.User.PermanentAddress</textarea>
                                        @Html.ValidationMessageFor(f => f.PermanentAddress)
                                    </div>
                                    <div class="col-sm-6">
                                        <b>@Html.Label("Permanent Address Area")</b><br />
                                        <select name="PermanentAreaAddress" class="form-control">
                                            <option selected>--Select--</option>
                                            @foreach (var item1 in (IEnumerable<OnlineElectionSystem_FYP.Models.Constituency_Locations>)ViewBag.ConstituencyLocs)
                                            {
                                                if (ViewBag.User.PermanentAreaAddress.Equals(item1.Id.ToString()))
