    <div class="Content-wrapper">
        <div class="container-fluid">
            <!-- Breadcrumbs-->
            <center><b><h3 style="color:blue">Edit Candidate</h3></b></center>
            <div class="row">
                <div class="col-lg-8">
                    <hr class="mt-2">
                </div>
                <div class="col-lg-4">
                </div>
            </div>
            <!-- Example DataTables Card-->
            <form action="EditCandidate" method="post">
                @*<input type="hidden" value="@ViewBag.gotUser.Id"/>*@

                <div class="row">
                    <div class="col-sm-6">
                        <b>Name</b><br />
                        @Html.TextBoxFor(f => f.Name, new { type = "text", @disabled="disabled", @class = "form-control", Value = ViewBag.Candidate.Name, @minlength = "3", @maxlength = "30" })<br />
                    </div>
                    <div class="col-sm-6">
                        <b>CNIC</b><br />
                        @Html.TextBoxFor(f => f.CNIC, new { type = "text", @disabled="disabled", @class = "form-control", Value = ViewBag.Candidate.CNIC, @minlength = "15", @maxlength = "15" })
                    </div>
                </div>

                @Html.TextBoxFor(f => f.Id, new { type = "hidden", Value = ViewBag.Candidate.Id })


                @*<input type="text" class="form-control" style="width:250px" value="@ViewBag.gotUser.CNIC" />*@<br />

                @*                <input type="text" class="form-control" style="width:250px" value="@ViewBag.gotUser.Password" /><br />*@
                <div class="row">
                    <div class="col-sm-6">
                        <b>Political Party</b><br />
                        <select name="PoliticalParty" class="form-control">
                            <option value="">--Select--</option>
                            @foreach(var item1 in(IEnumerable<OnlineElectionSystem_FYP.Models.PoliticalParty>)ViewBag.PoliticalParties){
                                if (ViewBag.Candidate.PoliticalParty.Equals(item1.Name))
                                {
                                    <option value="@item1.Name" selected>@item1.Name</option>
                                }
                                else
                                {
                                    <option value="@item1.Name">@item1.Name</option>
                                }
                            }
                        </select>
                    </div>
                    <div class="col-sm-6">
                        <b>@Html.Label("Constituency")</b><br />
                        <select name="ConstituteId" class="form-control">
                            <option selected>--Select--</option>
                            @foreach (var item1 in (IEnumerable<OnlineElectionSystem_FYP.Models.Constitution>)ViewBag.Constituencies)
                            {
                                if (ViewBag.Candidate.ConstituteId.Equals(item1.Id))
                                {
                                    <option value="@item1.Id" selected>@item1.ConstitutionCode</option>
                                }
                                else
                                {
                                    <option value="@item1.Id">@item1.ConstitutionCode</option>
                                }
                            }
                        </select>
                    </div>
                </div>

                <div class="row">
                    <div class="col-sm-6">
                        @*<b>Permanent Address</b><br />
                        @Html.TextBoxFor(f => f.PermanentAddress, new { type = "text", @class = "form-control", Value = ViewBag.gotUser.PermanentAddress, @minlength = "2", @maxlength = "50" })*@
                    </div>
                    <div class="col-sm-6">
                        @*<b>@Html.Label("Permanent Address Area")</b><br />
                        <select name="PermanentAreaAddress" class="form-control">
                            <option selected>--Select--</option>
                            @foreach (var item1 in (IEnumerable<OnlineElectionSystem_FYP.Models.Constitution>)ViewBag.ConstituencyLocs)
                            {
                                if (ViewBag.gotUser.PermanentAreaAddress.Equals(item1.Id.ToString()))
                                {
                                    <option value="@item1.Id" selected>@item1.Address</option>
                                }
                                <option value="@item1.Id">@item1.Address</option>
                            }
                        </select>*@
                    </div>
                </div>

                @*                <input type="text" class="form-control" style="width:250px" value="@ViewBag.gotUser.CurrentAddress" /><br />*@

                @*                <input type="text" class="form-control" style="width:250px" value="@ViewBag.gotUser.PermanentAddress" /><br />*@
                @*<b>Date Of Birth</b><br />
                @Html.TextBoxFor(f => f.DateOfBirth, new { type = "date", @class = "form-control", style = "width:250px", Value = ViewBag.gotUser.DateOfBirth })*@
                @*                <input type="date" class="form-control" style="width:250px" value="@ViewBag.gotUser.DateOfBirth" /><br />*@
                <center>
                    @*<b>User Type</b><br />
                    <select name="Type" class="form-control" style="width:180px">
                        @if (ViewBag.gotUser.Type == "Voter")
                        {
                            <option value="Voter" selected>Voter</option>
                        }
                        else
                        {
                            <option value="Voter">Voter</option>
                        }
                        @if (ViewBag.gotUser.Type == "Candidate")
                        {
                            <option value="Candidate" selected>Candidate</option>
                        }
                        else
                        {
                            <option value="Candidate">Candidate</option>
                        }
                        @if (ViewBag.gotUser.Type == "Admin")
                        {
                            <option value="Admin" selected>Admin</option>
                        }
                        else
                        {
                            <option value="Admin">Admin</option>
                        }
                    </select><br /><br />*@
                    <input type="submit" value="Save" style="width:100px" class="btn btn-success" />
                </center>
