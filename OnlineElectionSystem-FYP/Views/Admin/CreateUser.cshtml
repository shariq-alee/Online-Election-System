                    <div class="col-sm-6">
                        <b>@Html.Label("Name")</b><br />
                        @Html.TextBoxFor(f => f.Name, new { required = "required", @class="form-control", @minlength = "3", @maxlength = "30" })<br />
                        @Html.ValidationMessageFor(f=>f.Name)
                    </div>
                    <div class="col-sm-6">
                        <b>@Html.Label("CNIC")</b><br />
                        @Html.TextBoxFor(f => f.CNIC, new { id = "CNIC",@class="form-control", @minlength = "15", @maxlength = "15" })<br />
                        @Html.ValidationMessageFor(f => f.CNIC)
