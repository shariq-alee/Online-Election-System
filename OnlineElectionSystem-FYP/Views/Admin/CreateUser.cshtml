                @Html.TextBoxFor(f => f.Password, new { Value = "user1234", @class = "form-control", @minlength = "8", @maxlength = "12", type = "password", required = "required" })<br />
                @Html.ValidationMessageFor(f => f.Password)
                <div class="row">
